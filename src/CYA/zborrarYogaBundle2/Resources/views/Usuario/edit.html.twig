{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
    {{ include('CYAYogaBundle:Usuario:messages/success.html.twig') }}
	<div class="main container">
		<div class="row well">
			<div class="col-md-20">
				<div class="page-header">
					<h2>Editar Usuario </h2>
					   {%if usuario.brochure != null%}
					 <img src="{{ asset('web/uploads/brochures'~'/'~usuario.brochure) }}" class="avatar-tabla" /> 
					 {%endif%}
                   <h2>{{ usuario.nombre }} {{ usuario.apellido }} </h2> 
	
				<a href="{{ path('cya_usuario_editavatar', {id: usuario.id }) }}"class="btn btn-sm btn-primary">
                 <i class="icon ion-eye"></i> Cambiar Avatar
                 </a>
				</div>
			
				{{ form_start(form, {'attr': { 'rol' : 'form'}}) }}
				<h4 class="text-danger">{{ form_errors(form) }}</h4>
                     
	
					     
				
					<fieldset>
                     
            
	            
                 <div class="col-md-20">
                   
                   
                 <div class="col-md-6">
					    <div class="form-group">
					        Nombre de usuario
					        {{ form_widget(form.nombreusuario, {'attr': {'class': 'form-control', 'placeholder' : 'Nombre de usuario'}}) }}
					        <span class="text-danger">{{ form_errors(form.nombreusuario) }}</span>
					    </div>
                        <div class="form-group">
					        Nombre
					        {{ form_widget(form.nombre, {'attr': {'class': 'form-control', 'placeholder' : 'Nombre'}}) }}
					        <span class="text-danger">{{ form_errors(form.nombre) }}</span>
					    </div> 
					    <div class="form-group">
					        Apellido
					        {{ form_widget(form.apellido, {'attr': {'class': 'form-control', 'placeholder' : 'Apellido'}}) }}
					        <span class="text-danger">{{ form_errors(form.apellido) }}</span>
					    </div>  
						<div class="form-group">
					        DNI
					        {{ form_widget(form.dni, {'attr': {'class': 'form-control', 'placeholder' : 'DNI'}}) }}
					        <span class="text-danger">{{ form_errors(form.dni) }}</span>
					    </div>
						<div class="form-group">
					        Dirección
					        {{ form_widget(form.direccion, {'attr': {'class': 'form-control', 'placeholder' : 'Dirección'}}) }}
					        <span class="text-danger">{{ form_errors(form.direccion) }}</span>
					    </div>
						<div class="form-group">
					        Ciudad
					        {{ form_widget(form.ciudad, {'attr': {'class': 'form-control', 'placeholder' : 'Ciudad'}}) }}
					        <span class="text-danger">{{ form_errors(form.ciudad) }}</span>
					    </div>
					    <div class="form-group">
					        Teléfono
					        {{ form_widget(form.telefono, {'attr': {'class': 'form-control', 'placeholder' : 'Teléfono'}}) }}
					        <span class="text-danger">{{ form_errors(form.telefono) }}</span>
					    </div>
					    <div class="form-group">
					        Mail
					        {{ form_widget(form.mail, {'attr': {'class': 'form-control', 'placeholder' : 'Mail'}}) }}
					        <span class="text-danger">{{ form_errors(form.mail) }}</span>
					    </div>
		</div>
		   <div class="col-md-6">		
					    
					    <div class="form-group">
					        Fecha de nacimiento
					        {{ form_widget(form.fechanacimiento, {'attr': {'class': 'form-control', 'placeholder' : 'Fecha de nacimiento'}}) }}
					        <span class="text-danger">{{ form_errors(form.fechanacimiento) }}</span>
					    </div>
					    
			
				
		
					    <div class="form-group">
					        Fecha de Ingreso
					        {{ form_widget(form.fechaingreso, {'attr': {'class': 'form-control', 'placeholder' : 'Fecha de ingreso'}}) }}
					        <span class="text-danger">{{ form_errors(form.fechaingreso) }}</span>
					    </div>
					    <div class="form-group">
					           Fecha de Re-Ingreso (se generarán las deudas de cta. cte a partir de esta fecha)
					        {{ form_widget(form.fechareingreso, {'attr': {'class': 'form-control', 'placeholder' : 'Fecha de reingreso'}}) }}
					        <span class="text-danger">{{ form_errors(form.fechareingreso) }}</span>
					    </div>
					    <div class="form-group">
					        Rol
					        {{ form_widget(form.rol, {'attr': {'class': 'form-control', 'placeholder' : 'Rol'}}) }}
					        <span class="text-danger">{{ form_errors(form.rol) }}</span>
					    </div>
					    <div class="form-group">
					        Tipo de cuota
					        {{ form_widget(form.tipocuota, {'attr': {'class': 'form-control', 'placeholder' : 'Tipo de cuota'}}) }}
					        <span class="text-danger">{{ form_errors(form.tipocuota) }}</span>
					    </div>
					    <br>
					   
                     
					
				  	 
				  	  <br>
					    
					    
					   		Locker  
						    <label>
								{{ form_widget(form.haveLocker) }} 
								<span class="text-danger">{{ form_errors(form.haveLocker) }}</span>
					  	    </label>
					        &nbsp;
					        &nbsp;
					        &nbsp;
					    
					 
					   		Asociación   
						    <label>
								{{ form_widget(form.haveAsoc) }} 
								<span class="text-danger">{{ form_errors(form.haveAsoc) }}</span>
						    </label>
						    
						     <br><br><br><br> 
					   		Estado 
						    <label>
								{{ form_widget(form.isActive) }} 
								<span class="text-danger">{{ form_errors(form.isActive) }}</span>
						    </label>
						
				
					    <br> 
					<br>
                    <br>
				    <p align=center>
				        {{ form_widget(form.save, {'label' : 'Grabar Modificación', 'attr': {'class': 'btn btn-success'}}) }}
				    </p>
		</div>		
		</div>
				
				
				  <div class="hidden">
					        Avatar
					        {{ form_widget(form.brochure, {'attr': {'class': 'form-control', 'placeholder' : 'archivo'}}) }}
					        <span class="text-danger">{{ form_errors(form.brochure) }}</span>
					    </div>
				
				
				
				
				
				 	</fieldset>
                     

                 
                   
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}