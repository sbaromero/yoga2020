{% extends 'layout.html.twig' %}

  
{% block body %}
{{ parent() }}
{{ include('CYAYogaBundle:Materia:messages/success.html.twig')}}
<div class="container-fluid profesorado">
        <div class="container profesorado-icon">
            <div class="row">
                <div class="col-sm-5">
                    <h2><i class="fa fa-bookmark" aria-hidden="true"></i> &nbsp; 
Módulos</h2>
                    <a href="{{ path('cya_materia_add') }}" class="head-link">
        			        <h3>
        			           <span><i class="icon ion-plus"></i></span>
    			                Agregar Nuevo Módulo
        			         </h3>
        			    </a>
                </div>
                <div class="col-sm-7">
                    <form method="get" action="" class="form-inline pull-right" role="search">
        			</form>
        			
        			
                </div>
            </div>
        </div>
    </div>
	<div class="container">
	    <div class="row">
	    	
	    <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>

							<th>{{ knp_pagination_sortable(pagination, 'Código', 'r.id') }}</th>
							<th>{{ knp_pagination_sortable(pagination, 'Nombre de Curso', 'r.titulo') }} </th>
							<th>{{ knp_pagination_sortable(pagination, 'Nombre de Módulo', 'r.titulo') }} </th>
							<th>{{ knp_pagination_sortable(pagination, 'Comentario', 'r.comentario') }} </th>
						
                            <th>Acciones</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        {% for materia in pagination %}
                            <tr data-id="{{ materia.id }}">
                                
                                <td>{{ materia.id }}</td>
                                <td>{{ materia.curso.titulo }}</td>
                                <td>{{ materia.titulo }}</td>
                                <td>{{ materia.comentario }}</td>
                               
                                <td class="actions">
                                    <a href="{{ path('cya_materia_edit', {id: materia.id }) }}" class="btn btn-success" title="Editar">
                                        {% trans %} <i class="fa fa-pencil" aria-hidden="true"></i> &nbsp; 
 {% endtrans %}
                                    </a>
                                    
                                      <a href="{{ path('cya_materia_delete', {id: materia.id }) }}" onclick="return confirm('Está seguro??')"
			                           class="btn btn btn-danger"  title="Eliminar">
              
			                           <i class="fa fa-trash" aria-hidden="true"></i> &nbsp; 

			                        </a>
                                    
                                    
                                    
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
           <H4> {% trans %}Total Módulos:{% endtrans %} {{ pagination.getTotalItemCount }}</H4>
                {# display navigation #}
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}