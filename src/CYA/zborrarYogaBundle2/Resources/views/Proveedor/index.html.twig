{% extends 'layout.html.twig' %}

  
{% block body %}
{{ parent() }}
{#{{ include('CYAYogaBundle:Proveedor:messages/success.html.twig')}}#}
<div class="container-fluid cuenta">
        <div class="container cuenta-icon">
            <div class="row">
                <div class="col-sm-5">
                    <h2><i class="fa fa-truck" aria-hidden="true"></i> &nbsp; Proveedores</h2>
                    <a href="{{ path('cya_proveedor_add') }}" class="head-link">
        			        <h3>
        			           <span><i class="icon ion-plus"></i></span>
    			                Agregar nuevo Proveedor
        			         </h3>
        			    </a>
                </div>
                <div class="col-sm-7">
                    <form method="get" action="" class="form-inline pull-right" role="search">

                               


        			</form>
                </div>
            </div>
        </div>
    </div>
	<div class="container">
	    <div class="row">
	    	
	    <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>

							<th>{{ knp_pagination_sortable(pagination, 'Código', 'p.id') }}</th>
							<th>{{ knp_pagination_sortable(pagination, 'Nombre', 'p.nombre') }} </th>
						    <th>{{ knp_pagination_sortable(pagination, 'Email', 'p.mail') }} </th>
						    <th>{{ knp_pagination_sortable(pagination, 'Teléfono', 'p.telefono') }} </th>
						      <th>{{ knp_pagination_sortable(pagination, 'Tipo', 'p.tipo') }} </th>
                            <th>Acciones</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        {% for proveedores in pagination %}
                            <tr data-id="{{ proveedores.id }}">
                                
                                <td>{{ proveedores.id }}</td>
                                <td>{{ proveedores.nombre }}</td>
                                <td>{{ proveedores.mail }}</td>
                                <td>{{ proveedores.telefono }}</td>
                                  <td>{{ proveedores.tipo }}</td>

                                <td class="actions">
                                
                                    <a href="{{ path('cya_proveedor_edit', {id: proveedores.id }) }}" class="btn btn-success" title ="Editar">
                                        {% trans %} <i class="fa fa-pencil"></i> {% endtrans %}
                                    </a>
                                    
                                      <a href="{{ path('cya_proveedor_delete', {id: proveedores.id }) }}" onclick="return confirm('Está seguro??')"
			                           class="btn btn-danger "  title="Eliminar">
              
			                           <i class="fa fa-trash"></i>
			                        </a>
                                    
                                    
                                    
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
           <H4> {% trans %}Total Proveedores:{% endtrans %} {{ pagination.getTotalItemCount }}</H4>
                {# display navigation #}
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}