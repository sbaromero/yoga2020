{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container-fluid alumnos">
        <div class="container alumnos-icon">
            <div class="row">
                <div class="col-sm-5">
                    <h2><i class="fa fa-credit-card"></i>&nbsp; Nuevo Tipo de Cuota</h2>
                    <a href="{{ path('cya_tipocuota_index') }}" class="head-link">
    			        <h3>
    			           <span><i class="icon ion-android-arrow-dropleft back"></i></span>
    			            regresar al listado
    			         </h3>
    			    </a>
                </div>
            </div>
        </div>
    </div>
    
    
    {{ form_start(form, {'attr' : {'role' : 'form'}, 'action':'', 'method':'POST' }) }}
           
     <div class="container grey-input">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                   <b>  Nombre del Tipo de Cuota / Curso </b>
                     {{ form_widget(form.nombre, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Nombre del Tipo de Cuota / Curso'} }) }}
                     <span class="text-danger"> {{ form_errors(form.nombre) }} </span>
               </div>
            </div>
         </div>   
       
            
            
          <div class="row">   
            <div class="col-sm-2"> 
                <div class="form-group">
                   <b>  Valor </b>
                     {{ form_widget(form.valor, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Valor'} }) }}
                     <span class="text-danger"> {{ form_errors(form.valor) }} </span>
                </div>
            </div>
    </div> 
           
           
           
{#          <br><br>#}
          <div class="row">
            <div class="col-sm-9">
                <div class="form-group">
                <b> Ingrese un mensaje para todos los Alumnos de este Curso/Actividad: </b> 
                     {{ form_widget(form.mensaje, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Mensaje'} }) }}
                     <span class="text-danger"> {{ form_errors(form.mensaje) }} </span>
               </div>
            </div>
          </div>
          
          
          
{#            <br><br><br>#}
           
           
          <div class="row">
             <div class="col-sm-6">
                     <label> <b> Tipo </b><br>
                         {{ form_widget(form.escurso) }}
                         <span class="text-danger"> {{ form_errors(form.escurso) }} </span>
                     </label>
             </div>
      </div>
                  
 <br>
          <div class="row">
           <div class="col-sm-6">
                            <label><b> Estado de la Cuota </b> <br>
                            {{ form_widget(form.activa) }}
                            <span class="text-danger"> {{ form_errors(form.activa) }} </span>
                           </label>
                         </div>    
                </div>
                        
                     
                         
      <div class="row">
          <div class="col-sm-4">
                 <div class="form-group">
                    <b>   Fecha de Vencimiento </b>
					         {{ form_widget(form.fechavenc, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Fecha Vencimiento'} }) }}
                       <span class="text-danger"> {{ form_errors(form.fechavenc) }} </span>
                           </div>       
                    </div>     
            </div>
                        
                       
          
          
{#          <br>#}
<br>
<br>
            <div class="col-sm-6">
                {{ form_widget(form.save, {'label' : 'Agregar tipo de cuota', 'attr': {'class': 'btn alumnos-btn'} }) }}
            </div>
            
            {{ form_end(form) }}
     {#    </div>#}
     </div>
{% endblock %}

